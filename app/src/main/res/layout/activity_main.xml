<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatch.Vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/mViewPage"
        style="@style/MatchMatch" />

    <LinearLayout
        android:id="@+id/bottom_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:background="@color/common_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="5">

        <RelativeLayout
            android:id="@+id/bottomMenuHomeRl"
            style="@style/main_ationbar_relativeLayout">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/bottom_menu_home_lav"
                style="@style/main_ationbar_imageView"
                />


            <TextView
                android:id="@+id/bottom_menu_home_tv"
                style="@style/main_ationbar_textView"
                android:layout_below="@id/bottom_menu_home_lav"
                android:text="@string/login_login" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bottomMenuNewsRl"
            style="@style/main_ationbar_relativeLayout">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/bottomMenuNewsLAV"
                style="@style/main_ationbar_imageView"
                />


            <TextView
                android:id="@+id/bottomMenuNewsTV"
                style="@style/main_ationbar_textView"
                android:layout_below="@id/bottomMenuNewsLAV"
                android:text="@string/login_login" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bottomMenuWorkBenchRl"
            style="@style/main_ationbar_relativeLayout">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/bottomMenuWorkBenchLAV"
                style="@style/main_ationbar_imageView"
                />


            <TextView
                android:id="@+id/bottomMenuWorkBenchTV"
                style="@style/main_ationbar_textView"
                android:layout_below="@id/bottomMenuWorkBenchLAV"
                android:text="@string/login_login" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bottomMenuScheduleRl"
            style="@style/main_ationbar_relativeLayout">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/bottomMenuScheduleLAV"
                style="@style/main_ationbar_imageView"
                />


            <TextView
                android:id="@+id/bottomMenuScheduleTV"
                style="@style/main_ationbar_textView"
                android:layout_below="@id/bottomMenuScheduleLAV"
                android:text="@string/login_login" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/bottomMenuMeRl"
            style="@style/main_ationbar_relativeLayout">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/bottomMenuMeRlLAV"
                style="@style/main_ationbar_imageView"
                />


            <TextView
                android:id="@+id/bottomMenuMeRlTV"
                style="@style/main_ationbar_textView"
                android:layout_below="@id/bottomMenuMeRlLAV"
                android:text="@string/login_login" />

        </RelativeLayout>

    </LinearLayout>

    <!--    <com.ikang.staffapp.widget.BottomNavBar-->
